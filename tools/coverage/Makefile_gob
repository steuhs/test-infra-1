TAG = $(shell date -u +v%Y%m%d)-$(shell git describe --tags --always --dirty)

# Build and push specific variables.
REGISTRY ?= gcr.io
PROJECT  ?= cr-on-gke-tests

coverage-dev-image:
	CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o coverage
	chmod +x coverage
	gcloud builds submit --tag gcr.io/cr-on-gke-tests/test-infra/coverage-dev:latest-dev .
